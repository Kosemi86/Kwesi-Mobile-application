<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User.UserFragment">


    <TextView
        android:id="@+id/OrderNameEditText"
        android:layout_width="408dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:hint="Order"
        android:inputType="text"
        android:maxLines="1"
        android:padding="16dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loadOrderButton"
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        android:text="Load"
        app:layout_constraintEnd_toStartOf="@+id/nextCategoryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrderNameEditText" />

    <Button
        android:id="@+id/nextCategoryButton"
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loadOrderButton"
        app:layout_constraintTop_toBottomOf="@+id/OrderNameEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>